<h1>New Department/Teacher</h1>

<form action="/create_department">
  
  <div class="input-group edit">
    <span class="input-group-addon">Department name</span>
      <input type="text" class="form-control" placeholder="ex: CTE" name="name">
  </div>
  
  <div class="input-group edit">
    <span class="input-group-addon">Teacher to add</span>
    <select name="teacher_id">
      <% Teacher.all.each do |teacher| %>
        <option value="<%= teacher.id %>"><%= teacher.name %></option>
      <% end %>
    </select> 
  </div>
  
  <div>
    <input type="submit">
  </div>
</form>

