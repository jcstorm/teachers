  <div class="page-header">
  <h1>Teacher Profile</h1>
</div>
<div class="media">
  <a class="pull-left" href="#">
    <img src="<%= @teacher.image_url %>" class="thumbnail">
  </a>
  <div class="media-body">
    <h4 class="media-heading"><%= @teacher.name %></h4>
    <%= @teacher.bio %>
  </div>
</div>
<ul class="list-group">
  <li class="list-group-item"><strong>Email Address:</strong> <%= @teacher.email %></li>
  <li class="list-group-item"><strong>Department:</strong> <%= @teacher.department %></li>
  <li class="list-group-item"><strong>Primary Location:</strong> <%= @teacher.location %></li>
  <li class="list-group-item"><strong>Courses Taught:</strong>
    <ul>
    <% @teacher.courses.each do |course| %>
        <li><%= course.name %></li>
     <% end %>
    </ul>
  </li>
  <li class="list-group-item"><strong>Clubs/Activities:</strong> ...</li>
</ul>

<a href="/teachers/<%= @teacher.id %>/edit">Edit</a> |
<a href="/teachers/<%= @teacher.id %>/destroy">Destroy</a>
