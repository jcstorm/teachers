<h1>Teachers</h1>

<p><a href="/new_teacher">Add a New Teacher</a></p>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Email</th>
      <th>Department</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @teachers.each do |teacher| %>
    <tr>
      <td><img src="<%= teacher.image_url %>" class="small-thumb"></td>
      <td><%= teacher.name %></td>
      <td><%= teacher.email %></td>
      <td><%= teacher.department %></td>
          <td><a href="/teachers/<%= teacher.id %>">Show</a> | 
               <a href="/teachers/<%= teacher.id %>/edit">Edit</a> | 
               <a href="/teachers/<%= teacher.id %>/destroy">Destroy</a>
          </td>
    </tr>
  <% end %>
  </tbody>
</table>

