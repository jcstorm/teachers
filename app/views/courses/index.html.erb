<h1>Courses</h1>

<p><a href="/new_course">Add a New Course</a></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Teacher</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @courses.each do |course| %>
    <tr>
          <td><%= course.name %></td>
          <td><%= course.description %></td>
          <td><%= course.teacher_id %></td>
          <td><a href="/courses/<%= course.id %>">Show</a>
        </td>
      <td><a href="/courses/<%= course.id %>/edit">Edit</a></td>
      <td><a href="/courses/<%= course.id %>/destroy">Destroy</a></td>
    </tr>
  <% end %>
  </tbody>
</table>

